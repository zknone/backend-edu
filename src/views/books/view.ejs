<%- include('../port/layout-start', {title: title}) %>
<%- include('../port/menu') %>

<h1><%= title %></h1>

<div class="row">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-body">

                <h5 class="card-title"><%= book.title %></h5>
                <p><%= counter %></p>
                <p class="card-text"><%= book.description %></p>
                <p class="card-text"><%= book.authos %></p>
                <div class="text-right">
                    <a class="btn btn-sm btn-primary" href="/books/update/<%= book._id %>">
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                    </a>
                    <form action="/books/delete/<%= book.id %>" method="POST" class="d-inline">
                        <button class="btn btn-sm btn-danger">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </button>
                    </form>
                </div>

                <div class="form-group">
                    <div class="form-group">
                        <label for="name">name</label>
                        <input
                            placeholder="name"
                            class="form-control"
                            id="name"
                        >
                    </div>
                    <div class="form-group">
                        <label for="text">message</label>
                        <textarea
                            placeholder="message"
                            class="form-control"
                            id="text"
                        ></textarea>
                    </div>
                    <button type="submit" id="send-room" class="btn btn-primary">comment</button>
                </div>

                <div class="row">
                    <div class="col-4">
                        <div id="list" class="list-group">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../port/layout-end') %>